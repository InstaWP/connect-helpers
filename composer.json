{
    "name": "instawp/cli-core",
    "description": "CLI Package for InstaWP Remote Features",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Sayan Datta",
            "email": "iamsayan@protonmail.com"
        }
    ],
    "minimum-stability": "dev",
	"prefer-stable": true,
    "require": {
        "php": ">= 7.4.0"
    },
    "require-dev": {
        "wp-cli/wp-config-transformer": "^1.3",
        "woocommerce/action-scheduler": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "InstaWP\\CLI\\Core\\": "src/"
        },
        "files": [ 
            "vendor/woocommerce/action-scheduler/action-scheduler.php"
        ]
    },
    "scripts": {
        "build": [
			"composer dump-autoload --no-dev"
		]
	},
    "config": {
		"optimize-autoloader": true
	},
    "archive": {
		"exclude": [ "/bin", "/tests/", ".gitattributes", ".gitignore", ".travis.yml", ".phpcs.xml.dist", "phpunit.xml.dist", "README.md" ]
	}
}
